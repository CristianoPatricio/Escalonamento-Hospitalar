@model IEnumerable<EscalonamentoHospitalar.Models.Medico>

@{
    ViewData["Title"] = "Index";
}


<h2>Lista de Médicos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Inserir um novo médico</a>
</p>
<table class="table">
    <thead>
        <tr>
        <tr>
            <th>
                Número Mecanográfico
            </th>
            <th>
                Nome
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroMecanografico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>

                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.MedicoId">Editar</a> 
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.MedicoId">Detalhes</a> 
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.MedicoId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a href='@Url.Action("GestaoHospitalar", "DiretorServico")'>
        <input type="button" class="btn btn-default" value="Voltar à página inicial" />
    </a>
</div>
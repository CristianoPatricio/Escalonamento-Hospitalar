@model EscalonamentoHospitalar.Models.Medico

@{
    ViewData["Title"] = "Editar";
}

<link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.5.0/css/all.css' integrity='sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU' crossorigin='anonymous'>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<h2>Editar o/a médico/a <b>@Html.DisplayFor(model => model.Nome)</b></h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MedicoId" />
            <div class="form-group">
                <label asp-for="NumeroMecanografico" class="control-label">Número Mecanográfico</label>
                <input asp-for="NumeroMecanografico" class="form-control" placeholder="p. ex. E12345" />
                <span asp-validation-for="NumeroMecanografico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="p. ex. teste@gmail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contacto" class="control-label">Contacto</label>
                <input asp-for="Contacto" class="form-control" />
                <span asp-validation-for="Contacto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CC" class="control-label">Nº Cartão de Cidadão</label>
                <input asp-for="CC" class="form-control" />
                <span asp-validation-for="CC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_Nascimento" class="control-label">Data de Nascimento</label>
                <input asp-for="Data_Nascimento" class="form-control" />
                <span asp-validation-for="Data_Nascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EspecialidadeMedicoId" class="control-label">Especialidade</label>
                <select asp-for="EspecialidadeMedicoId" class="form-control" asp-items="ViewBag.EspecialidadeMedicoId"></select>
                <span asp-validation-for="EspecialidadeMedicoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_Inicio_Servico" class="control-label">Data de início ao serviço</label>
                <input asp-for="Data_Inicio_Servico" class="form-control" />
                <span asp-validation-for="Data_Inicio_Servico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-success" type="submit">
                    <i class="fas fa-save" style="color:white;"></i> Guardar alterações
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">
        <span class="fas fa-undo" style="color:dodgerblue;"></span> Voltar à lista
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
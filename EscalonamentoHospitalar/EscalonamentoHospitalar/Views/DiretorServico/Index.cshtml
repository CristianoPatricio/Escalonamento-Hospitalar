@model IEnumerable<EscalonamentoHospitalar.Models.DiretorServico>

@{
    ViewData["Title"] = "Listagem Diretores de Serviço";
}

@if (TempData["insertSuccess"] != null)
{
    <!--Mensagem de sucesso quandi insere diretor de serviço-->
    <div id="suc_form" class="alert alert-success">
        <strong>Sucesso!</strong> O registo foi inserido com sucesso.
    </div>
}

@if (TempData["deleteSuccess"] != null)
{
    <!--Mensagem de sucesso quando elimina diretor de serviço-->
    <div id="suc_form" class="alert alert-success">
        <strong>Sucesso!</strong> Diretor Serviço eliminado com sucesso.
    </div>
}

@if (TempData["successEdit"] != null)
{
    <!--Mensagem de sucesso quando elimina diretor de serviço-->
    <div id="suc_form" class="alert alert-success">
        <strong>Sucesso!</strong> O registo foi alterado com sucesso.
    </div>
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    //Passados 5 segundos a mensagem desaparece
    $(document).ready(function () {
        $("#suc_form").hide(10000);
    });
</script>

@if (User.IsInRole("DiretorServico")) { 

<h2>Lista de Diretores de Serviço</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                Nome
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DiretorServicoID"><input type="button" value="Editar" class="btn btn-warning" /></a>
                    <a asp-action="Details" asp-route-id="@item.DiretorServicoID"><input type="button" value="Detalhes" class="btn btn-info" /></a>
                    <a asp-action="Delete" asp-route-id="@item.DiretorServicoID"><input type="button" value="Eliminar" class="btn btn-danger" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<hr />
<p>
    <a asp-action="Create"><input type="button" value="Inserir novo Diretor Serviço" class="btn btn-primary" /></a>
</p>
}
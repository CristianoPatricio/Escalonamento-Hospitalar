@model IEnumerable<EscalonamentoHospitalar.Models.Tratamento>

@{
    ViewData["Title"] = "Tratamentos";
}
<p></p>

<link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.5.0/css/all.css' integrity='sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU' crossorigin='anonymous'>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">



@if (TempData["notice"] != null)
{
    <!--Mensagem de sucesso quando insere tratamento-->
    <div id="suc_form" class="alert alert-success">
        <strong>Sucesso!</strong> O registo do tratamento foi inserido com sucesso.
    </div>
}

@if (TempData["deleteEnf"] != null)
{
    <!--Mensagem de sucesso quando elimina tratamento-->
    <div id="suc_form" class="alert alert-success">
        <strong>Sucesso!</strong> tratamento eliminado com sucesso.
    </div>
}

@if (TempData["successEdit"] != null)
{
    <!--Mensagem de sucesso quando edita tratamento-->
    <div id="suc_form" class="alert alert-success">
        <strong>Sucesso!</strong> O registo de tratamento foi alterado com sucesso.
    </div>
}


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    //Passados 5 segundos a mensagem desaparece
    $(document).ready(function () {
        $("#suc_form").hide(10000);
    });
</script>

<h2>Lista de tratamentos</h2>


<p>
    <a asp-action="Create" class="btn btn-primary"></a>
    <span class="fas fa-file" style="color:white;"></span>Inserir um novo tratamento
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Patologia
            </th>
            <th>
                Paciente
            </th>
            <th>
                Data de início do tratamento
            </th>
            <th>
                Data de fim do tratamento
            </th>

            <th>
                Médico
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Patologia.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paciente.Nome)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DataInicio)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataFim)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Medico.Nome)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.TratamentoId">
                        <span class="glyphicon glyphicon-edit"></span>Editar
                    </a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.TratamentoId">
                        <span class="fas fa-info" style="color:white;"></span> Detalhes
                    </a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.TratamentoId">
                        <span class="glyphicon glyphicon-trash"></span>Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>
<hr />
<div>
    <a href='@Url.Action("GestaoHospitalar", "DiretorServico")' class="btn btn-default">
        <span class="glyphicon glyphicon-home"></span> Voltar à página inicial
    </a>
</div>

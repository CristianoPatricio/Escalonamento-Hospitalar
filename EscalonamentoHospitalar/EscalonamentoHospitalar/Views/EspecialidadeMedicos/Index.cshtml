@model IEnumerable<EscalonamentoHospitalar.Models.EspecialidadeMedico>

@{
    ViewData["Title"] = "Lista";
}

<link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.5.0/css/all.css' integrity='sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU' crossorigin='anonymous'>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@if (TempData["successInsertEspecialidade"] != null)
{
    <!--Mensagem de sucesso quando insere especialidade-->
    <div id="suc_form" class="alert alert-success">
        <strong>Sucesso!</strong> O registo foi inserido com sucesso.
    </div>
}

@if (TempData["successEdit"] != null)
{
    <!--Mensagem de sucesso quando edita especialidade-->
    <div id="suc_form" class="alert alert-success">
        <strong>Sucesso!</strong> O registo foi alterado com sucesso.
    </div>
}


@if (TempData["errorDelete"] != null)
{
    <div id="suc_form" class="alert alert-danger">
        <strong>ERRO!</strong> Impossível eliminar especialidade que tenha médicos atribuídos.
    </div>
}


@if (TempData["successDelete"] != null)
{
    <div id="suc_form" class="alert alert-success">
        <strong>Sucesso!</strong> Especialidade eliminada com sucesso.
    </div>
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    //Passados 5 segundos a mensagem desaparece
    $(document).ready(function () {
        $("#suc_form").hide(10000);
    });
</script>

@*@if (User.IsInRole("DiretorServico")) // Acesso restrito ao Diretor de Serviço
    {*@

<h2>Lista de especialidades dos médicos</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                Especialidade
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeEspecialidade)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EspecialidadeMedicoId" class="btn btn-warning">
                        <span class="glyphicon glyphicon-edit"></span> Alterar
                    </a>
                    <!--<a asp-action="Details" asp-route-id="@item.EspecialidadeMedicoId">Details</a> |-->
                    <a asp-action="Delete" asp-route-id="@item.EspecialidadeMedicoId" class="btn btn-danger">
                        <span class="glyphicon glyphicon-trash"></span> Eliminar
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>

<br />
<hr />
<p>
    <a asp-action="Create" class="btn btn-primary">
        <span class="fas fa-file" style="color:white;"></span> Inserir Nova Especialidade do Médico
    </a>
</p>

<hr />
<div>
    <a href='@Url.Action("Index", "Home")' class="btn btn-default">
        <span class="glyphicon glyphicon-home"></span> Voltar à página inicial
    </a>
</div>



@*}*@

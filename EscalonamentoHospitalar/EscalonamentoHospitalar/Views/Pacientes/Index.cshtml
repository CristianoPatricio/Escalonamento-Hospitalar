@model IEnumerable<EscalonamentoHospitalar.Models.Paciente>

@{
    ViewData["Title"] = "Pacientes";
}

<h2>Pacientes</h2>

<p>
    <a asp-action="Create">Criar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Numero_Utente)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Numero_Utente)
            </td>
            
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.PacienteId">Editar</a> |
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.PacienteId">Detalhes</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.PacienteId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>

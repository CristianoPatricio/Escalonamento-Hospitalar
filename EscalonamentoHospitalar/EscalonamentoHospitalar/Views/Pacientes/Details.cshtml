@model EscalonamentoHospitalar.Models.Paciente

@{
    ViewData["Title"] = "Detalhes";
}

<h2>Detalhes do/a paciente <b>@Html.DisplayFor(model => model.Nome)</b></h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nome
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            Morada
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Morada)
        </dd>
        <dt>
            Código Postal
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cod_Postal)
        </dd>
        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Nº Cartão de Cidadão
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CC)
        </dd>
        <dt>
            Data de Nascimento
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Data_Nascimento)
        </dd>
        <dt>
            Número de Utente
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Numero_Utente)
        </dd>
        <dt>
            Contacto
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Contacto)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.PacienteId">EDITAR</a> |
    <a asp-action="Index" class="btn btn-default">Voltar à lista de pacientes</a>
</div>

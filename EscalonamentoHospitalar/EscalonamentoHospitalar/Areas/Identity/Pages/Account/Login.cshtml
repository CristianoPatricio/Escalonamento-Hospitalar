@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="col-md-6 col-md-offset-2">
    <section>
        <img class="image" src="~/images/James& Katie.png" alt="" width="500" height="500" />
    </section>
</div>


<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <label for="sel1">Entrar como:</label>
                <select class="form-control" id="sel1">
                    <option value="diretorServico">Diretor de Serviço</option>
                    <option value="enfermeiro">Enfermeiro</option>
                    <option value="medico">Médico</option>
                </select>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Código"></label>
                    <input asp-for="Input.Código" class="form-control" />
                    <span asp-validation-for="Input.Código" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
   
            </form>



